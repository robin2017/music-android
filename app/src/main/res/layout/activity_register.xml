<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.RegisterActivity">

    <include layout="@layout/nav_bar"></include>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:src="@mipmap/music" />

    <com.example.musicdemo.views.InputView
        android:id="@+id/input_phone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        app:input_hint="请输入手机号"
        app:input_icon="@mipmap/phone"
        app:is_password="false" />

    <View style="@style/line"></View>

    <com.example.musicdemo.views.InputView
        android:id="@+id/input_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        app:input_hint="请输入密码"
        app:input_icon="@mipmap/password"
        app:is_password="true" />

    <View style="@style/line"></View>
    <com.example.musicdemo.views.InputView
        android:id="@+id/input_password_confirm"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        app:input_hint="请确认密码"
        app:input_icon="@mipmap/password"
        app:is_password="true" />

    <View style="@style/line"></View>



    <Button style="@style/commitBnt"
        android:layout_gravity="center"
        android:text="注 册"
        android:onClick="onRegisterClick"></Button>

</LinearLayout>
